@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new Treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new Treat" class="btn btn-default" />
}
<p>
  <a href='javascript:history.go(-1)' class="btn btn-primary">Go Back to Previous Page</a>
</p>
<p>@Html.ActionLink("Show all Treats", "Index")</p> 