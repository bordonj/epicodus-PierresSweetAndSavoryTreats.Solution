@{
  Layout = "_Layout";
}
@using Bakery.Models;


<h1>Flavors</h1>

@if (Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor Flavor in Model)
  {
    <li>
      @Html.ActionLink($"{Flavor.Name}", "Details", new { id = Flavor.FlavorId })
      | number of treats: @(Flavor.JoinEntities.Count)
    </li>
  }
</ul>

<p>
  <a
    asp-action="Create"
    asp-controller="Flavors"
    class="btn btn-primary"
  > 
    <i class="bi bi-plus-square"></i> Add new Flavor 
  </a>
</p> 
<p>
  <a
    asp-action="Index"
    asp-controller="Home"
    class="btn btn-primary"
  > 
    <i class="bi bi-house"></i> Home
  </a>
</p> 